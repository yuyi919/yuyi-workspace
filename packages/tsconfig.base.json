{
  "compileOnSave": false,
  "exclude": ["node_modules", "tmp"],
  "compilerOptions": {
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
    "incremental": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": false,
    "importHelpers": true,
    "rootDir": ".",
    "target": "es2015",
    "module": "esnext",
    "types": ["jest", "node"],
    "lib": ["dom", "es2020", "esnext", "es6"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bot": ["apps/bot/src/index.ts"],
      "@bot/*": ["apps/bot/src/*"],
      "@core": ["libs/core/server/src/index.ts"],
      "@core/*": ["libs/core/server/src/*"],
      "@logger": ["libs/node/shared/logger/src/index.ts"],
      "@node-logger": ["libs/node/shared/logger/src/index.ts"],
      "@static-value": ["libs/shared/packages/static-values/src/index.ts"],
      "@types": ["libs/shared/packages/types/src/index.ts"],
      "@types/*": ["libs/shared/packages/types/src/*"],
      "@utils": ["libs/shared/packages/utils/src/index.ts"],
      "@utils/*": ["libs/shared/packages/utils/src/*"]
    }
  }
}
