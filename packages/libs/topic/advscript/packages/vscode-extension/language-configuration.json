{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["{{", "}}"],
    ["[[", "]]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{{", "close": "}}" },
    { "notIn": ["comment", "string"], "open": "[[", "close": "]]" },
    { "notIn": ["comment", "string"], "open": "[", "close": "]" },
    { "notIn": ["comment", "string"], "open": "【", "close": "】" },
    { "notIn": ["comment", "string"], "open": "(", "close": ")" },
    { "notIn": ["comment", "string"], "open": "\"", "close": "\"" },
    { "notIn": ["comment", "string"], "open": "'", "close": "'" },
    { "notIn": ["comment", "string"], "open": "`", "close": "`" }
  ],
  "surroundingPairs": [
    ["_", "_"],
    ["{{", "}}"],
    ["[[", "]]"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"]
  ]
}
