{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["{{", "}}"],
    ["[[", "]]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "notIn": ["comment", "string"], "open": "{", "close": "}" },
    { "notIn": ["comment", "string"], "open": "[", "close": "]" },
    { "notIn": ["comment", "string"], "open": "(", "close": ")" },
    { "notIn": ["comment", "string"], "open": "【", "close": "】" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] },
    { "open": "/* ", "close": " */", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "【", "close": "】" },
    { "open": "（", "close": "）" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" },
    { "open": "_", "close": "_" },
    { "open": "*", "close": "*" }
  ],
  "autoCloseBefore": ";:.,=}])> \n\t"
}
