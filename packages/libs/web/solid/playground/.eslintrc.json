{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["solid"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": "off",
    "solid/jsx-no-undef": "error",
    "solid/jsx-uses-vars": "error",
    "solid/no-unknown-namespaces": "error"
  },
  "ignorePatterns": ["!src/**.tsx"]
}
